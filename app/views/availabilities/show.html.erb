<div class="row">
  <div class="col-xs-12">
    <h2><%= format_available_block_string(@availability) %></h2>

    <%= form_for @booking, url: bookings_path do |f| %>
      <%= f.hidden_field :babysitter_id, value: @availability.user.id %>
      <%= f.hidden_field :family_id, value: current_user.id %>
      <%= f.hidden_field :availability_id, value: params[:id] %>

      <div class="field">
        <%= f.label :from %>
        <%= f.datetime_select :from, minute_step: 60, ampm: true, default: @availability.from %>
      </div>

      <div class="field">
        <%= f.label :to %>
        <%= f.datetime_select :to, minute_step: 60, ampm: true, default: @availability.to %>
      </div>

      <%= f.submit %>
    <% end %>
  </div>
</div>