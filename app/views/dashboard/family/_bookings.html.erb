<% if bookings[:pending].empty? && bookings[:pending].empty? %>
  <p>Looks like you haven't booked a babysitter yet.</p>
<% else %>
  <% if bookings[:pending].present? %>
    <div>
      <h3>Pending Bookings</h3>
      <table>
        <thead></thead>
        <tbody>
        <% bookings[:pending].each do |booking| %>
            <tr>
              <td>
                <%= render partial: 'dashboard/family/booking', locals: { booking: booking } %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <% if bookings[:booked].present? %>
    <div>
      <h3>Accepted Bookings</h3>
      <table>
        <thead></thead>
        <tbody>
        <% bookings[:booked].each do |booking| %>
          <tr>
            <td>
              <%= render partial: 'dashboard/family/booking', locals: { booking: booking } %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
<% end %>

<%= link_to 'Find a babysitter now!', search_path, class: 'btn btn-primary' %>